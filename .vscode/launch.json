{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch NestJS (ts-node)",
            "skipFiles": [ "<node_internals>/**" ],
            "program": "${workspaceFolder}/src/main.ts",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [ "-r", "ts-node/register", "-r", "tsconfig-paths/register" ],
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true
        }
    ]
}